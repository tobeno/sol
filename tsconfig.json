{
  "compilerOptions": {
    /* Basic Options */
    "incremental": true,              /* Enable incremental compilation */
    "target": "ES2022",               /* Specify ECMAScript target version */
    "module": "ES2022",               /* Specify module code generation */
    "lib": ["ES2022"],                /* Specify library files to include */
    // "allowJs": true,               /* Allow javascript files to be compiled */
    // "checkJs": true,               /* Report errors in .js files */
    // "jsx": "preserve",             /* Specify JSX code generation */
    "declaration": true,              /* Generate corresponding '.d.ts' file */
    // "declarationMap": true,        /* Generate sourcemap for each '.d.ts' file */
    "sourceMap": true,                /* Generate corresponding '.map' file */
    // "outFile": "./",               /* Concatenate and emit output to single file */
    "outDir": "./dist",               /* Redirect output structure to directory */
    "rootDir": "./",                  /* Specify root directory of input files */
    // "composite": true,             /* Enable project compilation */
    // "tsBuildInfoFile": "./",       /* Store incremental compilation information */
    // "removeComments": true,        /* Do not emit comments to output */
    "noEmit": true,                   /* Do not emit outputs */
    // "importHelpers": true,         /* Import emit helpers from 'tslib' */
    // "downlevelIteration": true,    /* Support iterables in 'for-of', etc. */
    "isolatedModules": true,          /* Transpile each file as separate module */

    /* Strict Type-Checking Options */
    "strict": true,                   /* Enable all strict type-checking options */
    "noImplicitAny": true,            /* Error on implied 'any' type */
    "strictNullChecks": true,         /* Enable strict null checks */
    "strictFunctionTypes": true,      /* Enable strict function type checking */
    "strictBindCallApply": true,      /* Check 'bind', 'call', and 'apply' methods */
    "strictPropertyInitialization": true, /* Check property initialization in classes */
    "noImplicitThis": true,           /* Error on 'this' with implied 'any' type */
    "alwaysStrict": true,             /* Parse in strict mode, emit "use strict" */
    "exactOptionalPropertyTypes": true, /* Exact optional property types */
    "useUnknownInCatchVariables": true, /* Use 'unknown' for catch variables */

    /* Modern Type Safety Options */
    "noUncheckedIndexedAccess": true, /* Add 'undefined' to indexed access results */
    "noImplicitOverride": true,       /* Ensure overrides use 'override' keyword */
    "noPropertyAccessFromIndexSignature": true, /* Enforce indexed access for index signatures */

    /* Additional Checks */
    "noUnusedLocals": true,           /* Report errors on unused locals */
    "noUnusedParameters": true,       /* Report errors on unused parameters */
    "noImplicitReturns": true,        /* Error when not all code paths return */
    "noFallthroughCasesInSwitch": true, /* Error on fallthrough cases in switch */
    "allowUnreachableCode": false,    /* Disallow unreachable code */
    "allowUnusedLabels": false,       /* Disallow unused labels */
    "verbatimModuleSyntax": true,     /* Use ECMAScript-style imports/exports */
    "moduleDetection": "force",       /* How TypeScript detects modules */

    /* Module Resolution Options */
    "moduleResolution": "bundler",    /* Module resolution strategy */
    // "baseUrl": "./",               /* Base directory for non-absolute modules */
    // "rootDirs": [],                /* Combined runtime project structure roots */
    // "typeRoots": [],               /* Folders to include type definitions from */
    // "types": [],                   /* Type declaration files to include */
    "resolveJsonModule": true,        /* Enable importing .json files */
    "allowSyntheticDefaultImports": true, /* Allow imports from no-default-export modules */
    "esModuleInterop": true,          /* CommonJS/ES Modules interoperability */
    // "preserveSymlinks": true,      /* Don't resolve symlink real path */
    // "allowUmdGlobalAccess": true,  /* Allow accessing UMD globals from modules */

    /* Source Map Options */
    // "sourceRoot": "",              /* Where debugger finds TypeScript files */
    // "mapRoot": "",                 /* Where debugger finds map files */
    // "inlineSourceMap": true,       /* Emit single file with source maps */
    // "inlineSources": true,         /* Emit source with sourcemaps */

    /* Experimental Options */
    // "experimentalDecorators": true,    /* Support for ES7 decorators */
    // "emitDecoratorMetadata": true,     /* Emit design-type metadata for decorators */

    "skipLibCheck": true              /* Skip type checking of declaration files */
  },
  "include": ["src/**/*", "bin/**/*", "vite.config.ts"],
  "exclude": ["dist", "esm", "node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
